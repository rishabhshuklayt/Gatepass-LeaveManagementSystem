                document.getElementById('rejectForm').submit();
                // Reload the page after a short delay
                setTimeout(() => {
                    location.reload();
                }, 1000); // 1000 milliseconds = 1 second
            }
        </script> -->
        <script>
        
        $('#example').DataTable( {
            responsive: true
        } );
    </script>














    
